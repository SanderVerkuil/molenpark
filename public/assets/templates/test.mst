<table class='table-striped table table-bordered table-hover'>
  <tr>
    <th>
      Name
    </th>
    <th>
      Parents
    </th>
    <th>
      Pets
    </th>
  </tr>
  {{#users}}
    <tr>
      <td>
        {{name}}
      </td>
      <td>
        <table class='table-striped table table-bordered table-hover'>
          <tr>
            <th>
              Who
            </th>
            <th>
              Name
            </th>
          </tr>
          {{#parents}}
            {{#father}}
              <tr>
                <td>
                  Father
                </td>
                <td>
                  {{name}}
                </td>
              </tr>
            {{/father}}
            {{#mother}}
              <tr>
                <td>
                  Mother
                </td>
                <td>
                  {{name}}
                </td>
              </tr>
            {{/mother}}
          {{/parents}}
        </table>
      </td>
      <td>
        <table class='table-striped table table-bordered table-hover'>
          <tr>
            <th>
              Name
            </th>
            <th>
              Kind
            </th>
          </tr>
          {{#pets}}
            <tr>
              <td>
                {{name}}
              </td>
              <td>
                {{kind}}
              </td>
            </tr>
          {{/pets}}
        </table>
      </td>
    </tr>
  {{/users}}
</table>
